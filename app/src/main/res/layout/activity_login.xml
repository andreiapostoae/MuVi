<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_amber_50"
    tools:context="com.samaras.muvi.LoginActivity">



    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/email"
        android:layout_marginRight="292dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/key"
        android:layout_marginRight="290dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="348dp"
        android:layout_height="542dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="343dp"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextParola"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:cursorVisible="true"
        android:ems="10"
        android:fadeScrollbars="false"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#E64A19"
        android:textColorHint="#E64A19"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="70dp"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/buttonLogIn"
        style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="223dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="259dp"
        android:drawableLeft="@drawable/ic_person"
        android:gravity="left|center_vertical"
        android:text="Login"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonCreateUser"
        style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="259dp"
        android:text="Sign Up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextParola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonLogIn"
        android:layout_alignLeft="@+id/editTextEmail"
        android:layout_alignStart="@+id/editTextEmail"
        android:layout_marginTop="123dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#E64A19"
        android:textColorHint="#E64A19"
        android:textStyle="italic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="70dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonResetPassword"
        style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="187dp"
        android:text="Reset Password"
        android:drawableLeft="@drawable/ic_refresh"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="106dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
